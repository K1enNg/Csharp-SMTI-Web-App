@model IEnumerable<FinalExam3.Models.Course>

<h3>Available Courses</h3>

@if (!Model.Any())
{
    <p>No courses are available for registration at the moment.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Course Title</th>
                <th>Total Hours</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.CourseTitle</td>
                    <td>@course.TotalHour</td>
                    <td>
                        <form method="post" action="@Url.Action("RegisterForCourse")">
                            <input type="hidden" name="courseNumber" value="@course.CourseNumber" />
                            <button type="submit" class="btn btn-success">Register</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
